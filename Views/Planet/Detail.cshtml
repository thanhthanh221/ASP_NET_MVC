@model ASP_NET_MVC.Models.PlanetModel
<h1>@Model.name</h1>
<div class="card w-50">
    <img src="~/img/Planet/@(Model.name).jpg" alt="Hình ảnh hành tinh">
    <div class="card-body">
        <h5>@Model.VnName</h5>
        <div class="card-text">
            @Model.Content
        </div>
        <a asp-controller ="Planet" asp-action = "Index">Các hành tinh</a>
    </div>
</div>
